@model Business.Dtos.WebInfoUpdateDto
@{
    ViewData["Title"] = "Web Sayfa Panel";
    Layout = "_InfoLayout";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card mt-2">
                    <div class="card-body">
                        <div class="tab-content ">

                            <form method="post" asp-action="Index" asp-controller="WebInfo" enctype="multipart/form-data">


                                <div class="row">
                                    <div class="col-md-6">
                                        <input type="hidden" asp-for="Id"/>
                                        <input type="hidden" asp-for="ImageUrl"/>
                                        <div class="form-group">
                                            <label asp-for="Name"></label>
                                            <input asp-for="Name" class="form-control"/>
                                            <span class="text-danger" asp-validation-for="Name"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Surname"></label>
                                            <input asp-for="Surname" class="form-control"/>
                                            <span class="text-danger" asp-validation-for="Surname"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="File"></label>
                                            <input asp-for="File" class="form-control"/>
                                            <span class="text-danger" asp-validation-for="File"></span>
                                            <img src="~/@Model.ImageUrl" width="80" height="80"/>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Title"></label>
                                            <input asp-for="Title" class="form-control"/>
                                            <span class="text-danger" asp-validation-for="Title"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Birthday"></label>
                                            <input asp-for="Birthday" class="form-control"/>
                                            <span class="text-danger" asp-validation-for="Birthday"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="City"></label>
                                            <input asp-for="City" class="form-control"/>
                                            <span class="text-danger" asp-validation-for="City"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="Twitter"></label>
                                            <input asp-for="Twitter" class="form-control"/>
                                            <span class="text-danger" asp-validation-for="Twitter"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Facebook"></label>
                                            <input asp-for="Facebook" class="form-control"/>
                                            <span class="text-danger" asp-validation-for="Facebook"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Instagram"></label>
                                            <input asp-for="Instagram" class="form-control" />
                                            <span class="text-danger" asp-validation-for="Instagram"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Github"></label>
                                            <input asp-for="Github" class="form-control" />
                                            <span class="text-danger" asp-validation-for="Github"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Linkedin"></label>
                                            <input asp-for="Linkedin" class="form-control" />
                                            <span class="text-danger" asp-validation-for="Linkedin"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Medium"></label>
                                            <input asp-for="Medium" class="form-control" />
                                            <span class="text-danger" asp-validation-for="Medium"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="ExperienceCount"></label>
                                            <input asp-for="ExperienceCount" class="form-control" />
                                            <span class="text-danger" asp-validation-for="ExperienceCount"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="CustomerCount"></label>
                                            <input asp-for="CustomerCount" class="form-control" />
                                            <span class="text-danger" asp-validation-for="CustomerCount"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Email"></label>
                                            <input asp-for="Email" class="form-control" />
                                            <span class="text-danger" asp-validation-for="Email"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="ProjectCount"></label>
                                            <input asp-for="ProjectCount" class="form-control" />
                                            <span class="text-danger" asp-validation-for="ProjectCount"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="AwardsCount"></label>
                                            <input asp-for="AwardsCount" class="form-control" />
                                            <span class="text-danger" asp-validation-for="AwardsCount"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-12">


                                        <div class="form-group">
                                            <label asp-for="Content"></label>
                                            <textarea id="summernote" asp-for="Content"></textarea>
                                            <span class="text-danger" asp-validation-for="Content"></span>
                                        </div>
                                    </div>


                                    <button type="submit" class="btn btn-primary btn-sm"><span class="fas fa-save"></span> Kaydet </button>

                                </div>

                            </form>


                        </div>
                    </div>

                </div>

            </div>

        </div>

    </div>

</section>