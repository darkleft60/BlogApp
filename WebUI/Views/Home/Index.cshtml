@using WebUI.Models
@model WebUI.Models.HomeDto
@{
    ViewData["Title"] = "Anasayfa";
    Layout = "_HomeLayout";
}

<main>

    <section class="hero d-flex justify-content-center align-items-center" id="section_1">
        <div class="container">
            <div class="row">

                <div class="col-lg-7 col-12">
                    <div class="hero-text">
                        <div class="hero-title-wrap d-flex align-items-center mb-4">
                            <img src="~/@Model.WebInfo.ImageUrl" class="avatar-image avatar-image-large img-fluid" alt="">

                            <h1 class="hero-title ms-3 mb-0">Merhaba</h1>
                        </div>

                        <h2 class="mb-4">Beni tanımak ister misin ?</h2>
                        <p class="mb-4"><a class="custom-btn btn custom-link" href="#section_2">Hadi başlayalım</a></p>
                    </div>
                </div>

                <div class="col-lg-5 col-12 position-relative">
                    <div class="hero-image-wrap"></div>
                    <img src="~/UI/images/portrait-happy-excited-man-holding-laptop-computer.png" class="hero-image img-fluid" alt="">
                </div>

            </div>
        </div>

        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#535da1" fill-opacity="1" d="M0,160L24,160C48,160,96,160,144,138.7C192,117,240,75,288,64C336,53,384,75,432,106.7C480,139,528,181,576,208C624,235,672,245,720,240C768,235,816,213,864,186.7C912,160,960,128,1008,133.3C1056,139,1104,181,1152,202.7C1200,224,1248,224,1296,197.3C1344,171,1392,117,1416,90.7L1440,64L1440,0L1416,0C1392,0,1344,0,1296,0C1248,0,1200,0,1152,0C1104,0,1056,0,1008,0C960,0,912,0,864,0C816,0,768,0,720,0C672,0,624,0,576,0C528,0,480,0,432,0C384,0,336,0,288,0C240,0,192,0,144,0C96,0,48,0,24,0L0,0Z"></path></svg>
    </section>

    <section class="about section-padding" id="section_2">
        <div class="container">
            <div class="row">

                <div class="col-lg-12 col-12 mt-5 mt-lg-0">
                    <div class="about-thumb">

                        <div class="section-title-wrap d-flex justify-content-end align-items-center mb-4">
                            <h2 class="text-white me-4 mb-0">Hakkımda</h2>

                            <img src="~/@Model.WebInfo.ImageUrl" class="avatar-image img-fluid" alt="">
                        </div>

                        <h3 class="pt-2 mb-3">@Model.WebInfo.Title</h3>

                        <p>@Html.Raw(Model.WebInfo.Content)</p>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <section class="featured section-padding">
        <div class="container">
            <div class="row">

                <div class="col-lg-6 col-12">
                    <div class="profile-thumb">
                        <div class="profile-title">
                            <h4 class="mb-0">Bilgilerim</h4>
                        </div>

                        <div class="profile-body">
                            <p>
                                <span class="profile-small-title">Ad Soyad</span>
                                <span>@Model.WebInfo.Name @Model.WebInfo.Surname</span>
                            </p>

                            <p>
                                <span class="profile-small-title">D. Tarih</span>
                                <span>@Model.WebInfo.Birthday</span>
                            </p>

                            <p>
                                <span class="profile-small-title">Şehir</span>
                                <span>@Model.WebInfo.City</span>
                            </p>

                            <p>
                                <span class="profile-small-title">E-Posta</span>
                                <span>@Model.WebInfo.Email</span>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 col-12 mt-5 mt-lg-0">
                    <div class="about-thumb">
                        <div class="row">
                            <div class="col-lg-6 col-6 featured-border-bottom py-2">
                                <strong class="featured-numbers">@Model.WebInfo.ExperienceCount+</strong>

                                <p class="featured-text">Deneyim Yılı</p>
                            </div>

                            <div class="col-lg-6 col-6 featured-border-start featured-border-bottom ps-5 py-2">
                                <strong class="featured-numbers">@Model.WebInfo.ProjectCount</strong>

                                <p class="featured-text">Proje Sayısı</p>
                            </div>


                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <section class="services section-padding" id="section_3">
        <div class="container">
            <div class="row">

                <div class="col-lg-10 col-12 mx-auto">
                    <div class="section-title-wrap d-flex justify-content-center align-items-center mb-5">
                        <img src="~/UI/images/handshake-man-woman-after-signing-business-contract-closeup.jpg" class="avatar-image img-fluid" alt="">

                        <h2 class="text-white ms-4 mb-0">Öz Geçmiş</h2>
                    </div>

                    <div class="row pt-lg-5">
                        @foreach (var item in Model.ResumeListDto.Resumes)
                        {
                            <div class="col-lg-6 col-12">
                                <div class="services-thumb services-thumb-up">
                                    <div class="d-flex flex-wrap align-items-center border-bottom mb-4 pb-3">
                                        <h3 class="mb-0">@item.Title</h3>

                                        <div class="services-price-wrap ms-auto">
                                            <p class="services-price-text mb-0">@item.Date</p>
                                            <div class="services-price-overlay"></div>
                                        </div>
                                    </div>

                                    <p>@Html.Raw(item.Description)</p>
                                    <p class="custom-btn custom-border-btn btn mt-3">@item.Company</p>

                                    <div class="services-icon-wrap d-flex justify-content-center align-items-center">
                                        <i class="services-icon bi-archive"></i>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </section>


    <section class="projects section-padding" id="section_4">
        <div class="container">
            <div class="row">

                <div class="col-lg-12 col-md-8 col-12 ms-auto">
                    <div class="section-title-wrap d-flex justify-content-center align-items-center mb-4">
                        <img src="~/UI/images/white-desk-work-study-aesthetics.jpg" class="avatar-image img-fluid" alt="">

                        <h2 class="text-white ms-4 mb-0">Projeler</h2>
                    </div>
                </div>

                <div class="clearfix"></div>
                @foreach (var item in Model.ProjectListDto.Projects)
                {
                    <div class="col-lg-4 col-md-6 col-12">
                        <div class="projects-thumb" style="height: 500px">
                            <div class="projects-info">
                                <small class="projects-tag">@item.Category</small>

                                <h3 class="projects-title">@item.Name</h3>
                            </div>

                            <a href="~/@item.ImageUrl" class="popup-image">
                                <img src="~/@item.ImageUrl" class="projects-image img-fluid" alt="">
                            </a>

                        </div>
                        <div class="services-price-wrap ms-auto">
                            <a href="#" class="services-price-text mb-0">İncele</a>
                            <div class="services-price-overlay"></div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <section class="contact section-padding" id="section_5">
        <div class="container">
            <div class="row">

                <div class="col-lg-12 col-md-8 col-12">
                    <div class="section-title-wrap d-flex justify-content-center align-items-center mb-5">
                        <img src="~/UI/images/aerial-view-man-using-computer-laptop-wooden-table.jpg" class="avatar-image img-fluid" alt="">

                        <h2 class="text-white ms-4 mb-0">İletişim</h2>
                    </div>
                </div>

                <div class="clearfix"></div>

                <div class="col-lg-12 col-md-6 col-12 pe-lg-0">
                    <div class="contact-info contact-info-border-start d-flex flex-column">

                        <strong class="site-footer-title d-block mt-4 mb-3">Sosyal Medya</strong>

                        <ul class="social-icon">
                            <li class="social-icon-item"><a href="@Model.WebInfo.Twitter" class="social-icon-link bi-twitter"></a></li>
                            <li class="social-icon-item"><a href="@Model.WebInfo.Facebook" class="social-icon-link bi-facebook"></a></li>
                            <li class="social-icon-item"><a href="@Model.WebInfo.Instagram" class="social-icon-link bi-instagram"></a></li>
                            <li class="social-icon-item"><a href="@Model.WebInfo.Github" class="social-icon-link bi-github"></a></li>
                            <li class="social-icon-item"><a href="@Model.WebInfo.Linkedin" class="social-icon-link bi-linkedin"></a></li>
                            <li class="social-icon-item"><a href="@Model.WebInfo.Medium" class="social-icon-link bi-medium"></a></li>
                        </ul>

                    </div>
                </div>

            </div>
        </div>
    </section>
</main>

